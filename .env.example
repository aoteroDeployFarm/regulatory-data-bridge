# -------- App ----------
APP_NAME=Regulatory Data Bridge
ENV=development            # development | staging | production
DEBUG=false
LOG_LEVEL=INFO             # DEBUG | INFO | WARNING | ERROR
PORT=8000
TZ=America/Denver
BASE_URL=http://localhost:8000

# CORS (comma-delimited)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API auth (for X-API-Key or JWT)
API_KEY=dev_local_key_123
SECRET_KEY=change-me-please
JWT_SECRET=change-me-jwt

# -------- Database / Vector --------
DATABASE_URL=postgresql+psycopg://reguser:regpass@localhost:5432/regdb
PGVECTOR_ENABLED=true
VECTOR_TABLE=rag_chunks
CHUNK_SIZE_TOKENS=1200
CHUNK_OVERLAP_CHARS=800

# -------- Cache / Queue --------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# -------- Model Providers --------
# Use either/both; pick defaults below
OPENAI_API_KEY=
GEMINI_API_KEY=

LLM_PROVIDER=gemini          # openai | gemini
LLM_MODEL=gemini-1.5-pro     # e.g. gemini-1.5-pro / gemini-1.5-flash / gpt-4o
EMBEDDING_PROVIDER=openai    # openai | gemini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
GEMINI_EMBEDDING_MODEL=text-embedding-004

# -------- Notifications --------
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
ALERT_CHANNEL=#reg-updates

# Push (pick one)
PUSH_PROVIDER=expo           # expo | fcm | apns
EXPO_ACCESS_TOKEN=
FCM_SERVER_KEY=
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_AUTH_KEY_PATH=

# -------- Email (optional) --------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Regulatory Bridge <noreply@example.com>"

# -------- Storage (optional: PDFs, exports) --------
STORAGE_PROVIDER=local       # local | s3 | gcs
FILES_DIR=./data/files
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
GCP_PROJECT_ID=
GCP_CREDENTIALS_JSON_PATH=

# -------- Scrapers --------
DEFAULT_HTML_SELECTOR=main, article, section, h1, h2, h3
HTTP_TIMEOUT_SECONDS=30
USER_AGENT=RegDataBridge/1.0 (+https://example.com)
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10
PROXY_URL=

# -------- RAG / Q&A --------
RAG_TOP_K=6
RAG_MIN_SCORE=0.15

# -------- Observability --------
SENTRY_DSN=
ENABLE_SQL_ECHO=false

# -------- GitHub Importer (Python script) --------
GITHUB_TOKEN=
